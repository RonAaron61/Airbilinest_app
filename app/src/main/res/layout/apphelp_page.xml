<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars = "none"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TitleHelp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="40dp"
                android:textSize="22dp"
                android:justificationMode="inter_word"
                android:text="@string/title_apphelp" />

            <TextView
                android:id="@+id/textHelp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="40dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/TitleHelp_1"
                android:text="@string/text_apphelp_1" />

            <ImageView
                android:id="@+id/AppHomeScreen1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/textHelp_1"
                app:srcCompat="@drawable/airbilinestapp2" />

            <TextView
                android:id="@+id/textHelp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/AppHomeScreen1"
                android:text="@string/text_apphelp_2" />

            <ImageView
                android:id="@+id/BiliNorm_page"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_width="300dp"
                android:layout_height="450dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/textHelp_2"
                app:srcCompat="@drawable/bilinormpage" />

            <TextView
                android:id="@+id/textHelp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/BiliNorm_page"
                android:text="@string/text_apphelp_3" />

            <ImageView
                android:id="@+id/AppHomeScreen2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_width="300dp"
                android:layout_height="450dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/textHelp_3"
                app:srcCompat="@drawable/airbilinestapp1" />

            <TextView
                android:id="@+id/textHelp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/AppHomeScreen2"
                android:text="@string/text_apphelp_4" />

            <ImageView
                android:id="@+id/ControlAppImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/textHelp_4"
                app:srcCompat="@drawable/airbilinestapp3" />

            <TextView
                android:id="@+id/textHelp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/ControlAppImage"
                android:text="@string/text_apphelp_5" />

            <ImageView
                android:id="@+id/PatientRecord_page_1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_width="300dp"
                android:layout_height="450dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/textHelp_5"
                app:srcCompat="@drawable/patientrecord_page_1" />

            <TextView
                android:id="@+id/textHelp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/PatientRecord_page_1"
                android:text="@string/text_apphelp_6" />

            <ImageView
                android:id="@+id/PatientRecord_page_2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_width="300dp"
                android:layout_height="700dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/textHelp_6"
                app:srcCompat="@drawable/patientrecord_page_2" />

            <TextView
                android:id="@+id/textHelp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="120dp"
                android:justificationMode="inter_word"
                android:layout_below="@id/PatientRecord_page_2"
                android:text="@string/text_apphelp_7" />


        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>